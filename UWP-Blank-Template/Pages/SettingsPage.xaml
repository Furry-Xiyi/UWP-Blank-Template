<Page
    x:Class="UWP.Pages.SettingsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:muxc="using:Microsoft.UI.Xaml.Controls">

    <ScrollViewer Padding="20">
        <StackPanel Spacing="32">

            <!-- 外观与材质组 -->
            <StackPanel Spacing="12">
                <TextBlock Text="外观与材质"
                           FontSize="20"
                           FontWeight="SemiBold"/>

                <!-- 应用主题折叠卡 -->
                <muxc:Expander IsExpanded="False"
                               HorizontalAlignment="Stretch"
                               HorizontalContentAlignment="Left"
                               MinHeight="70">
                    <muxc:Expander.Header>
                        <StackPanel Orientation="Horizontal" Spacing="12">
                            <FontIcon Glyph="&#xE706;" Width="30" FontSize="20"/>
                            <StackPanel>
                                <TextBlock Text="应用主题"
                                           FontSize="16"
                                           FontWeight="SemiBold"/>
                                <TextBlock Text="选择浅色、深色或跟随系统"
                                           FontSize="12"
                                           Opacity="0.7"/>
                            </StackPanel>
                        </StackPanel>
                    </muxc:Expander.Header>
                    <muxc:RadioButtons x:Name="RbTheme"
                                       SelectionChanged="RbTheme_SelectionChanged"
                                       Padding="12,0,0,12">
                        <RadioButton Content="跟随系统" Tag="System"/>
                        <RadioButton Content="浅色" Tag="Light"/>
                        <RadioButton Content="深色" Tag="Dark"/>
                    </muxc:RadioButtons>
                </muxc:Expander>

                <!-- 背景材质折叠卡 -->
                <muxc:Expander IsExpanded="False"
                               HorizontalAlignment="Stretch"
                               HorizontalContentAlignment="Left"
                               MinHeight="70">
                    <muxc:Expander.Header>
                        <StackPanel Orientation="Horizontal" Spacing="12">
                            <FontIcon Glyph="&#xE2B1;" Width="30" FontSize="20"/>
                            <StackPanel>
                                <TextBlock Text="背景材质"
                                           FontSize="16"
                                           FontWeight="SemiBold"/>
                                <TextBlock Text="选择 Mica 或 Acrylic"
                                           FontSize="12"
                                           Opacity="0.7"/>
                            </StackPanel>
                        </StackPanel>
                    </muxc:Expander.Header>

                    <!-- 背景材质 -->
                    <muxc:RadioButtons x:Name="RbMaterial"
                                       SelectionChanged="RbMaterial_SelectionChanged"
                                       Padding="12,0,0,12">
                        <RadioButton Content="Mica" Tag="Mica"/>
                        <RadioButton Content="Acrylic" Tag="Acrylic"/>
                    </muxc:RadioButtons>
                </muxc:Expander>
            </StackPanel>


            <!-- 导航栏设置 -->
            <StackPanel Spacing="12">
                <TextBlock Text="导航栏"
                           FontSize="20"
                           FontWeight="SemiBold"/>

                <ComboBox x:Name="PanePositionCombo"
                          Header="导航栏位置"
                          SelectionChanged="PanePositionCombo_SelectionChanged">
                    <ComboBoxItem Content="Left"/>
                    <ComboBoxItem Content="Top"/>
                </ComboBox>
            </StackPanel>

            <!-- 声音设置 -->
            <StackPanel Spacing="12">
                <TextBlock Text="声音"
                           FontSize="20"
                           FontWeight="SemiBold"/>

                <ToggleSwitch x:Name="SoundToggle"
                              Header="启用控件声音"
                              Toggled="SoundToggle_Toggled"/>
            </StackPanel>

            <!-- 关于组 -->
            <StackPanel Spacing="12">
                <TextBlock Text="关于"
                           FontSize="20"
                           FontWeight="SemiBold"/>

                <muxc:Expander IsExpanded="False"
                               HorizontalAlignment="Stretch"
                               HorizontalContentAlignment="Left"
                               MinHeight="80">
                    <muxc:Expander.Header>
                        <StackPanel Orientation="Horizontal" Spacing="12">
                            <Image x:Name="ImgAppIcon" 
                                   Width="24" 
                                   Height="24" 
                                   Stretch="UniformToFill"/>
                            <StackPanel>
                                <TextBlock x:Name="TxtAppName" 
                                           FontSize="18" 
                                           FontWeight="SemiBold"/>
                                <TextBlock x:Name="TxtCopyright" 
                                           FontSize="12" 
                                           Opacity="0.7"/>
                                <TextBlock x:Name="TxtVersion" 
                                           FontSize="14"
                                           Opacity="0.8"/>
                            </StackPanel>
                        </StackPanel>
                    </muxc:Expander.Header>

                    <StackPanel Margin="0,8,0,0" Spacing="8">
                        <!-- 加群 -->
                        <HyperlinkButton Click="OpenExternalLink"
                 Tag="https://qm.qq.com/q/UPnTGW164m"
                 HorizontalAlignment="Left">
                            <StackPanel Orientation="Horizontal" Spacing="8">
                                <FontIcon Glyph="&#xE902;" FontSize="16"/>
                                <TextBlock Text="QQ群" VerticalAlignment="Center"/>
                            </StackPanel>
                        </HyperlinkButton>
                    </StackPanel>
                </muxc:Expander>

                <!-- 发送反馈 -->
                <HyperlinkButton Click="OpenExternalLink"
                 Tag="https://github.com/Furry-Xiyi/UWP-Blank-Template"
                 Margin="0,8,0,0"
                 HorizontalAlignment="Left">
                    <StackPanel Orientation="Horizontal" Spacing="8">
                        <FontIcon Glyph="&#xED15;" FontSize="16"/>
                        <TextBlock Text="发送反馈" VerticalAlignment="Center"/>
                    </StackPanel>
                </HyperlinkButton>
            </StackPanel>

        </StackPanel>
    </ScrollViewer>
</Page>
