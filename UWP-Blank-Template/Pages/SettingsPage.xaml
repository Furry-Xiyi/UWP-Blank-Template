<Page
    x:Class="UWP.Pages.SettingsPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:muxc="using:Microsoft.UI.Xaml.Controls">

    <ScrollViewer Padding="20">
        <StackPanel Spacing="32">

            <!-- 外观与材质组 -->
            <StackPanel Spacing="12">
                <TextBlock x:Uid="AppearanceGroup"
                           FontSize="20"
                           FontWeight="SemiBold"/>

                <!-- 应用主题折叠卡 -->
                <muxc:Expander IsExpanded="False"
                               HorizontalAlignment="Stretch"
                               HorizontalContentAlignment="Left"
                               MinHeight="70">
                    <muxc:Expander.Header>
                        <StackPanel Orientation="Horizontal" Spacing="12">
                            <FontIcon Glyph="&#xE706;" Width="30" FontSize="20"/>
                            <StackPanel>
                                <TextBlock x:Uid="ThemeTitle"
                                           FontSize="16"
                                           FontWeight="SemiBold"/>
                                <TextBlock x:Uid="ThemeSubtitle"
                                           FontSize="12"
                                           Opacity="0.7"/>
                            </StackPanel>
                        </StackPanel>
                    </muxc:Expander.Header>
                    <muxc:RadioButtons x:Name="RbTheme"
                                       SelectionChanged="RbTheme_SelectionChanged"
                                       Padding="12,0,0,12">
                        <RadioButton x:Uid="ThemeSystem" Tag="System"/>
                        <RadioButton x:Uid="ThemeLight" Tag="Light"/>
                        <RadioButton x:Uid="ThemeDark" Tag="Dark"/>
                    </muxc:RadioButtons>
                </muxc:Expander>

                <!-- 背景材质折叠卡 -->
                <muxc:Expander IsExpanded="False"
                               HorizontalAlignment="Stretch"
                               HorizontalContentAlignment="Left"
                               MinHeight="70">
                    <muxc:Expander.Header>
                        <StackPanel Orientation="Horizontal" Spacing="12">
                            <FontIcon Glyph="&#xE2B1;" Width="30" FontSize="20"/>
                            <StackPanel>
                                <TextBlock x:Uid="MaterialTitle"
                                           FontSize="16"
                                           FontWeight="SemiBold"/>
                                <TextBlock x:Uid="MaterialSubtitle"
                                           FontSize="12"
                                           Opacity="0.7"/>
                            </StackPanel>
                        </StackPanel>
                    </muxc:Expander.Header>

                    <!-- 背景材质 -->
                    <muxc:RadioButtons x:Name="RbMaterial"
                                       SelectionChanged="RbMaterial_SelectionChanged"
                                       Padding="12,0,0,12">
                        <RadioButton x:Uid="MaterialMica" Content="Mica" Tag="Mica"/>
                        <RadioButton x:Uid="MaterialAcrylic" Content="Acrylic" Tag="Acrylic"/>
                    </muxc:RadioButtons>
                </muxc:Expander>
            </StackPanel>


            <!-- 导航栏设置 -->
            <StackPanel Spacing="12">
                <TextBlock x:Uid="NavGroup"
               FontSize="20"
               FontWeight="SemiBold"/>

                <ComboBox x:Name="PanePositionCombo"
              x:Uid="PanePositionCombo"
              SelectionChanged="PanePositionCombo_SelectionChanged">
                    <ComboBoxItem x:Uid="PanePositionLeft" Tag="Left"/>
                    <ComboBoxItem x:Uid="PanePositionTop" Tag="Top"/>
                </ComboBox>
            </StackPanel>

            <!-- 声音设置 -->
            <StackPanel Spacing="12">
                <TextBlock x:Uid="SoundGroup"
                           FontSize="20"
                           FontWeight="SemiBold"/>

                <ToggleSwitch x:Name="SoundToggle"
                              x:Uid="SoundToggle"
                              Toggled="SoundToggle_Toggled"/>
            </StackPanel>

            <!-- 关于组 -->
            <StackPanel Spacing="12">
                <TextBlock x:Uid="AboutGroup"
                           FontSize="20"
                           FontWeight="SemiBold"/>

                <muxc:Expander IsExpanded="False"
                               HorizontalAlignment="Stretch"
                               HorizontalContentAlignment="Left"
                               MinHeight="80">
                    <muxc:Expander.Header>
                        <StackPanel Orientation="Horizontal" Spacing="12">
                            <Image x:Name="ImgAppIcon"
                   Width="30"
                   Height="30"
                   Stretch="Uniform"
                   Margin="4,0,4,0"/>
                            <StackPanel>
                                <TextBlock x:Name="TxtAppName"
                   x:Uid="TxtAppName"
                   FontSize="18"
                   FontWeight="SemiBold"/>
                                <TextBlock x:Name="TxtCopyright"
                   x:Uid="TxtCopyright"
                   FontSize="12"
                   Opacity="0.7"/>
                                <TextBlock x:Name="TxtVersion"
                   x:Uid="TxtVersion"
                   FontSize="14"
                   Opacity="0.8"/>
                            </StackPanel>
                        </StackPanel>
                    </muxc:Expander.Header>

                    <StackPanel>
                        <!-- 加群 -->
                        <HyperlinkButton Click="OpenExternalLink"
                                         Tag="https://qm.qq.com/q/UPnTGW164m"
                                         HorizontalAlignment="Left">
                            <StackPanel Orientation="Horizontal" Spacing="8">
                                <FontIcon Glyph="&#xE902;" FontSize="16"/>
                                <TextBlock x:Uid="QQGroup" VerticalAlignment="Center"/>
                            </StackPanel>
                        </HyperlinkButton>
                    </StackPanel>
                </muxc:Expander>

                <!-- 发送反馈 -->
                <HyperlinkButton Click="OpenExternalLink"
                                 Tag="https://github.com/Furry-Xiyi/UWP-Blank-Template"
                                 Margin="0,8,0,0"
                                 HorizontalAlignment="Left">
                    <StackPanel Orientation="Horizontal" Spacing="8">
                        <FontIcon Glyph="&#xED15;" FontSize="16"/>
                        <TextBlock x:Uid="Feedback" VerticalAlignment="Center"/>
                    </StackPanel>
                </HyperlinkButton>
            </StackPanel>

        </StackPanel>
    </ScrollViewer>
</Page>